<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

  <EditText
      android:id="@+id/worldNameEdit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginLeft="4dp"
      android:layout_marginStart="4dp"
      android:ems="15"
      android:inputType="textNoSuggestions"
      android:selectAllOnFocus="true"
      android:imeOptions="actionNext"
      android:hint="@string/label_newWorld">
    <requestFocus />
  </EditText>
  <View
      android:id="@+id/worldNameDivider"
      style="@style/Divider"
      android:layout_below="@id/worldNameEdit"/>
  <CheckBox
      android:id="@+id/zeroBasedCoordinatesCb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@id/worldNameEdit"
      android:layout_alignStart="@id/worldNameEdit"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/worldNameDivider"
      android:layout_marginLeft="4dp"
      android:layout_marginStart="4dp"
      android:text="@string/label_zeroBasedCoordinates" />
  <View
      android:id="@+id/zeroBasedDivider"
      style="@style/Divider"
      android:layout_below="@id/zeroBasedCoordinatesCb"/>
  <TextView
      android:id="@+id/originLocLabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@id/zeroBasedCoordinatesCb"
      android:layout_alignStart="@id/zeroBasedCoordinatesCb"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/zeroBasedDivider"
      android:layout_marginLeft="4dp"
      android:layout_marginStart="4dp"
      android:text="@string/label_originLoc"
      android:textAppearance="?android:attr/textAppearanceSmall" />
  <Spinner
      android:id="@+id/originLocSpinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@id/originLocLabel"
      android:layout_toRightOf="@id/originLocLabel"
      android:layout_toEndOf="@id/originLocLabel" />
  <View
      android:id="@+id/originLocDivider"
      style="@style/Divider"
      android:layout_below="@id/originLocSpinner"/>
  <TextView
      android:id="@+id/mapWidthLabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/originLocDivider"
      android:paddingTop="7dp"
      android:layout_marginLeft="4dp"
      android:layout_marginStart="4dp"
      android:text="@string/label_regionWidth"
      android:textAppearance="?android:attr/textAppearanceSmall" />
  <EditText
      android:id="@+id/mapWidthEdit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/originLocDivider"
      android:layout_toRightOf="@id/mapWidthLabel"
      android:layout_toEndOf="@id/mapWidthLabel"
      android:ems="3"
      android:inputType="number"
      android:selectAllOnFocus="true"
      android:imeOptions="actionNext"/>
  <TextView
      android:id="@+id/mapHeightLabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/mapWidthEdit"
      android:paddingTop="7dp"
      android:layout_marginLeft="4dp"
      android:layout_marginStart="4dp"
      android:text="@string/label_regionHeight"
      android:textAppearance="?android:attr/textAppearanceSmall" />
  <EditText
      android:id="@+id/mapHeightEdit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/mapWidthEdit"
      android:layout_toRightOf="@id/mapHeightLabel"
      android:layout_toEndOf="@id/mapHeightLabel"
      android:ems="3"
      android:inputType="number"
      android:selectAllOnFocus="true"
      android:imeOptions="actionDone"/>
  <View
      android:id="@+id/mapSizeDivider"
      style="@style/Divider"
      android:layout_below="@id/mapHeightEdit"/>
  <ListView
      android:id="@+id/mapList"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/mapSizeDivider"
      android:choiceMode="singleChoice"
      android:layout_marginLeft="4dp"
      android:layout_marginStart="4dp"
      android:descendantFocusability="afterDescendants"/>
</RelativeLayout>
